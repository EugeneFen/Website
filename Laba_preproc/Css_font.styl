	.grid-container
		grid-template-rows: repeat(3, 40px) repeat(3, minmax(300px, 440px)) minmax(80px, 190px) minmax(100px, 370px)
		grid-template-columns: repeat(2, 50%)
		grid-template-areas: "header1 header2" "header3 header4" "header5 header6" "galery1 galery1" "galery2 galery2" "galery3 galery3" "text1 text1" "text text"
	img
		width: 80%
	.grid-container 
		.img1
