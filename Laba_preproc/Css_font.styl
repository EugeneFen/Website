tablar = 30px
tablar_2 = 20px
indent = 5px
style-p(size)
	padding size
	margin size 
color_act =	DarkGray
procent = 100%

body
	background: DarkBlue
img
	width: 85%
a
	text-decoration: none
	color: black
.active
	background color_act
