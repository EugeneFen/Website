		margin: auto
		width: 100%
.grid-container 
	.tim-one
		grid-area :text
		line-height: 2.5em
		text-align: left
		padding tablar
		text-indent: tablar_2
		line-height tablar_2
.grid-container 
	.tim-two
		grid-area :text1
		line-height: 2.5em
		text-align: left
		padding-left tablar
		padding-right tablar
		text-indent: tablar_2
		line-height tablar_2
.grid-container 
	.tim-down
		grid-area : video
		padding tablar
		width 50%
		margin auto	
  
