.grid-container
	display: grid
	grid-template-rows: minmax(10px, 30px) minmax(60x, 100px) minmax(60x, 100px) minmax(100px, 400px)
	grid-template-columns: repeat(6, 16.6%)
	margin: auto
	background: Silver
	width: 90%
	grid-template-areas "header1 header2 header3 header4 header5 header6" "text text text text text text" "text1 text1 text1 galery galery galery" "video video video video video video"
.grid-container 
	div
		text-align: center  
.grid-container 
	.menu1
		grid-area :header1
		style-p(indent)
		font-weight : bold
.grid-container 
	.menu2
		grid-area :header2
		style-p(indent)
		font-weight : bold
.grid-container 
	.menu3
		grid-area :header3
		style-p(indent)
		font-weight : bold
.grid-container 
	.menu4
